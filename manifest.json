{
  "manifest_version": 2,
  "default_locale": "en",
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "0.1",

  "permissions": [
    "<all_urls>",
    "find",
    "storage",
    "tabs"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_title": "__MSG_extensionName__"
  },

  "sidebar_action": {
    "default_title" : "__MSG_extensionName__",
    "default_panel": "sidebar/panel.html"
  },

  "commands": {
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      }
    }
  }
}
